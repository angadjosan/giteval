# GitHub API
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_URL=https://api.github.com

# Claude API (Anthropic)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-opus-4-5-20251101

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_service_role_key_here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cache (Redis)
REDIS_URL=redis://localhost:6379
# For production: redis://username:password@host:port

# Storage (for cloned repositories)
GCS_BUCKET=giteval-repos
# Optional: local temp directory fallback
TEMP_DIR=/tmp/giteval

# Application
BASE_URL=http://localhost:3000
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_ANONYMOUS=5
RATE_LIMIT_AUTHENTICATED=50

# Repository Analysis Limits
MAX_REPO_SIZE_MB=1024
MAX_FILES=10000
ANALYSIS_TIMEOUT_MS=300000

# Logging
LOG_LEVEL=info
